{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./tsc-out",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
  },
  "exclude": [
    "spec/**/*.ts",
    "tsc-out/**/*.ts"
  ]
}